@model CourseVM
@{
    ViewData["Title"] = "OwnDidactic";
}

<div class="main-container">
    <div id="course" class="col-md-12">
        <div class="container-fluid">
            <div class="row">
                <div class=" col-md-12 col-sm-12 pb-5" style="text-align:center;">
                    <h2 style="padding-bottom:25px;"> <small>Didaktik Material</small></h2>
                    <a style="color:#ffffff;" class="btn btn-primary btn-block" asp-controller="DidacticMaterial" asp-action="Create" asp-route-id="@ViewBag.CourseId"><i style="color:white;" class="fa fa-plus" aria-hidden="true"></i> Əlavə et</a>
                </div>
                @foreach (var didacticMaterial in Model.DidacticMaterials)
                {
                    <div class="course col-md-4 col-sm-12 pb-3 pt-3  mb-3 mt-3"  >
                        <div class="course-thumb" >
                            <form asp-action="Delete" style="position:absolute; right:10%;" asp-controller="DidacticMaterial" class="delete" asp-route-id="@didacticMaterial.ID">
                                <input type="hidden" value="@didacticMaterial.ID" name="Id" />
                                <button style="border:none; background:transparent; cursor:pointer;" type="submit"><i class="fas fa-trash-alt"></i></button>
                            </form>
                            <h5>@didacticMaterial.Title</h5>
                            <span>@didacticMaterial.PublishDate</span>
                            <a href="~/didacticMaterials/@didacticMaterial.Path" class="btn btn-light">Yüklə</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>