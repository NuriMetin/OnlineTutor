@model CourseVM

@{
    ViewData["Title"] = "List";
}

<link rel="stylesheet" href="~/css/course.css">

<div class="main-container pb-3">
    <div id="course" class="col-md-12">
        <div class="container-fluid">
            <div class="row">
                <div class="section-title col-md-12 col-sm-12 pb-5" style="text-align:center;">
                    <h2 style="padding-bottom:25px;"> <small>Didaktik Material</small></h2>
                </div>
                @foreach (var course in Model.DidacticMaterials)
                {
                    <div class="course col-md-4 col-sm-12 pb-3 pt-3  mb-3 mt-3">
                        <div class="course-thumb">
                            <h5>@course.Title</h5>
                            <span>@course.PublishDate</span>
                            <a href="~/didacticMaterials/@course.Path" class="btn btn-light">Yüklə</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>