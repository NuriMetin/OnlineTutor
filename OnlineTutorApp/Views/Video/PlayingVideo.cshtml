                                </div>
                                <span class="comment-content">
                                    @comment.CommentText
                                </span>
                            </div>
                        }
                    </div>
                </div>*@
            </div>
            <div class="video-secondary">
                @foreach (var video in Model.Videos)
                {
                    <div class="secondary">
                        <form asp-action="CountView" asp-controller="VideoCourse" method="post" asp-route-id="@video.ID">
                            <button id="btn_video" type="submit" style="background:none; border:none; display:flex;">
                                <video class="video-secondary-video" autoPictureInPicture controlslist>
                                    <source src="~/videos/@video.Path" type="video/mp4" />
                                </video>
                                <div class="video-secondary-content">
                                    <h2 class="video-secondary-title">@video.Title</h2>
                                    <span class="video-secondary-views view_count">@video.ViewCount views</span>
                                </div>
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
