@model PlayingVideoVM
@{
    ViewData["Title"] = "PlayingVideo";
}
<link href="~/css/single-video.css" rel="stylesheet" />
<div class="main-container" style="height:1200px !important;">
    <div class="container-fluid">
        <div class="row">
            <div class="video-primary">
                <div class="video">
                    <video id="video-primary" controls autoPictureInPicture controlslist>
                        <source src="~/videos/@Model.Video.Path" type="video/mp4">
                    </video>
                    <div class="video-content">
                        <input id="videoId" type="hidden" asp-for="@Model.Video.ID" />
                        <h1 class="primary-video-title">
                            @Model.Video.Title
                        </h1>
                        <div class="left">
                            <span class="primary-video-views">
                                <span class="view_count">@Model.Video.ViewCount</span><span> views - </span><span class="primary-video-publish-date">
                                    @Model.Video.PublishDate
                                </span>
                            </span>
                        </div>
                        <div class="right" id="rating">
                            <button class="like" id="btn_like" style="cursor:pointer; border:none; background-color:transparent;"><i class="fas fa-thumbs-up"></i></button> <span id="like_Count">@Model.Likes</span>
                            <button class="dislike" id="btn_dislike" style="cursor:pointer;  border:none; background-color:transparent;"><i class="fas fa-thumbs-down"></i></button> <span id="dislike_Count">@Model.DisLikes</span>
                        </div>
                    </div>
                </div>
                @*<div class="comment">
                    @{ int commentCount = 0;
                        try { commentCount=Model.Comments.Count();} catch { commentCount = 0; }
                        }
                    <span id="commentCount" class="comment-count">@commentCount comments</span>
                    <form class="comment-form">
                        <input class="comment-text" id="commentText" type="text" placeholder="add comment...">
